{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}

  <style>
    /* Filtres en haut, pleine largeur */
    .dashboard-filters{
      float: none !important;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 0 1rem 0 !important;
      clear: both !important;
      grid-column: 1 / -1;
    }

    .resizer-handler{
      display: none;
    }

    .content-wrapper {
      display:block !important;
      align-items: center;
    }

    /* Cache toute sidebar/aside EasyAdmin */
    .content-sidebar, .ea-content .content-right, .ea-content .aside, .ea-aside {
      display: none !important;
    }
    .ea-content .content-panel, .ea-content .content {
      width: 100% !important;
      display: block !important;
    }

    /* Cartes de section : titre en haut à gauche */
    .section-card { clear: both; }
    .section-card .card-header{
      display: flex !important;
      align-items: center !important;
      justify-content: flex-start !important; /* gauche */
      text-align: left !important;
      gap: .75rem !important;
    }
    .section-card .card-header h3{
      margin: 0 !important;
      font-weight: 600 !important;
      text-align: left !important;
      white-space: normal;
    }

    /* Anti-float résiduel qui poussait “Meilleurs produits” à droite */
    .section-card .card-header .ms-auto,
    .section-card .card-header .float-end,
    .section-card .card-header [style*="margin-left:auto"]{
      margin-left: 0 !important;
      float: none !important;
    }

    /* Petits helpers */
    .chart-container { height: 380px; }
  </style>

  <h1 class="mb-4">Tableau de bord production</h1>

  {# --- Récup filtres --- #}
  {% set q = app.request.query %}
  {% set range  = q.get('range')  ?? 'month' %}
  {% set startQ = q.get('start')  ?? '' %}
  {% set endQ   = q.get('end')    ?? '' %}
  {% set status = q.get('status') ?? '' %}
  {% set client = q.get('client') ?? '' %}
  {% set product= q.get('product')?? '' %}

  {# --- Filtres (en haut, à gauche) --- #}
  <form id="filtersForm" method="get" action="{{ path('commercial_dashboard') }}" class="dashboard-filters card shadow-sm p-3 mb-4">
    <div class="row g-3 align-items-end">
      <div class="col-md-2">
        <label class="form-label">Période rapide</label>
        <select name="range" class="form-select" id="filter-range">
          <option value="day"   {{ range == 'day' ? 'selected' }}>Aujourd’hui</option>
          <option value="month" {{ range == 'month' ? 'selected' }}>Ce mois</option>
          <option value="30d"   {{ range == '30d' ? 'selected' }}>30 derniers jours</option>
          <option value="custom"{{ range == 'custom' ? 'selected' }}>Personnalisé</option>
        </select>
      </div>

      <div class="col-md-2">
        <label class="form-label">Début</label>
        <input type="date" name="start" id="filter-start" class="form-control" value="{{ startQ }}">
      </div>

      <div class="col-md-2">
        <label class="form-label">Fin</label>
        <input type="date" name="end" id="filter-end" class="form-control" value="{{ endQ }}">
      </div>

      <div class="col-md-2">
        <label class="form-label">Statut commande</label>
        <select name="status" class="form-select">
          <option value="">— Tous —</option>
          <option value="en attente"           {{ status == 'en attente' ? 'selected' }}>En attente</option>
          <option value="en cours"             {{ status == 'en cours' ? 'selected' }}>En cours</option>
          <option value="payée"                {{ status == 'payée' ? 'selected' }}>Payée</option>
          <option value="partiellement payée"  {{ status == 'partiellement payée' ? 'selected' }}>Partiellement payée</option>
          <option value="livrée"               {{ status == 'livrée' ? 'selected' }}>Livrée</option>
          <option value="annulée"              {{ status == 'annulée' ? 'selected' }}>Annulée</option>
        </select>
      </div>

      <div class="col-md-2">
        <label class="form-label">Client</label>
        <input type="text" name="client" class="form-control" placeholder="Nom client" value="{{ client }}">
      </div>

      <div class="col-md-2">
        <label class="form-label">Produit</label>
        <input type="text" name="product" class="form-control" placeholder="Nom produit" value="{{ product }}">
      </div>

      <div class="col-md-12 text-end mt-3">
        <a href="{{ path('commercial_dashboard') }}" class="btn btn-outline-secondary me-2">Réinitialiser</a>
        <button type="submit" class="btn btn-primary">Appliquer</button>
      </div>
    </div>
  </form>

  {# --- KPI Cards --- #}
  <div class="row">
    <div class="col-md-4">
      <div class="card bg-primary text-white shadow mb-4">
        <div class="card-body">
          <h5>Ventes du jour</h5>
          <p class="h3">{{ salesToday|default(0)|number_format(0, '.', ' ') }} Ar</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-success text-white shadow mb-4">
        <div class="card-body">
          <h5>Ventes du mois</h5>
          <p class="h3">{{ salesThisMonth|default(0)|number_format(0, '.', ' ') }} Ar</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-dark text-white shadow mb-4">
        <div class="card-body">
          <h5>Nb. commandes (période)</h5>
          <p class="h3">{{ monthlyData|reduce((carry, m) => carry + m.orderCount, 0) }}</p>
        </div>
      </div>
    </div>
  </div>

  {# ======================= Meilleurs produits (même structure que Évolution mensuelle) ======================= #}
  <div class="section-card card shadow mb-4">
    <div class="card-header">
      <h3>Meilleurs produits</h3>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-light">
            <tr>
              <th>Produit</th>
              <th class="text-end">Quantité vendue</th>
            </tr>
          </thead>
          <tbody>
            {# Supporte name/total ou productName/totalQuantity #}
            {% for product in bestProductsThisMonth %}
              {% set pname = product.name ?? product.productName ?? '' %}
              {% set pqty  = product.total ?? product.totalQuantity ?? 0 %}
              <tr>
                <td>{{ pname }}</td>
                <td class="text-end">{{ pqty }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="2" class="text-center text-muted">Aucune vente enregistrée</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  {# ======================= Évolution mensuelle ======================= #}
  <div class="section-card card shadow mb-4">
    <div class="card-header">
      <h3>Évolution mensuelle</h3>
    </div>
    <div class="card-body p-3">
      <div class="chart-container">
        <canvas id="salesChart"></canvas>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // === Chart ===
    (function() {
      const labels  = {{ monthlyData|map(m => m.period)|json_encode|raw }};
      const dataVals= {{ monthlyData|map(m => m.totalAmount)|json_encode|raw }};
      const ctx = document.getElementById('salesChart');

      new Chart(ctx, {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'Ventes',
            data: dataVals,
            borderColor: 'rgba(75, 192, 192, 1)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            fill: true,
            tension: 0.3,
            pointRadius: 3,
            borderWidth: 2,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: true, position: 'top' },
            tooltip: {
              callbacks: {
                label: (ctx) => new Intl.NumberFormat('fr-FR').format(ctx.parsed.y) + ' Ar'
              }
            }
          },
          scales: {
            y: {
              ticks: {
                callback: (val) => new Intl.NumberFormat('fr-FR').format(val) + ' Ar'
              },
              grid: { color: 'rgba(0,0,0,0.05)' }
            },
            x: { grid: { display: false } }
          }
        }
      });
    })();

    // === Gestion des dates personnalisées ===
    (function() {
      const rangeSel = document.getElementById('filter-range');
      const startInp = document.getElementById('filter-start');
      const endInp   = document.getElementById('filter-end');
      const form     = document.getElementById('filtersForm');

      function applyToggle() {
        const isCustom = rangeSel.value === 'custom';
        startInp.disabled = !isCustom;
        endInp.disabled   = !isCustom;
        startInp.classList.toggle('bg-light', !isCustom);
        endInp.classList.toggle('bg-light', !isCustom);
      }

      applyToggle(); // état initial
      rangeSel.addEventListener('change', applyToggle);

      form.addEventListener('submit', function() {
        const isCustom = rangeSel.value === 'custom';
        if (!isCustom) {
          // si non custom, n’envoie pas de dates (évite les conflits)
          startInp.disabled = true;
          endInp.disabled   = true;
          startInp.value = '';
          endInp.value   = '';
        }
      });
    })();
  </script>

{% endblock %}
